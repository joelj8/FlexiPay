@model IEnumerable<FlexiPay.Models.ViewModel.UITarjeta>

@{
    ViewBag.Title = "Tarjetas";
}

<h2>Tarjetas</h2>

<p>
    @Html.ActionLink("Nueva Tarjeta", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered dttable">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarjetaNumero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TarjetaNumero)
                </td>
                <td>

                    <a href="@Url.Action("Edit", "Tarjeta", new { id = item.ID })" class="btn btn-xs btn-primary">
                        <span class="glyphicon glyphicon-pencil"> Edita</span>
                    </a>
                    <a href="@Url.Action("Delete", "Tarjeta", new { id = item.ID})" class="btn btn-xs btn-danger">
                        <span class="glyphicon glyphicon-trash"> Borra</span>
                    </a>
                    <a href="@Url.Action("Detail", "Tarjeta", new { id = item.ID})" class="btn btn-xs btn-success">
                        <span class="glyphicon glyphicon-eye-open"> Ver</span>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
