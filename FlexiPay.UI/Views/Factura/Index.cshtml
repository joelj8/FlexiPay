@model IEnumerable<FlexiPay.Models.ViewModel.UIFactura>

@{
    ViewBag.Title = "Facturas";
}

<h2>Facturas</h2>

<p>
    @Html.ActionLink("Nueva Factura", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered dttable">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServicioID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLimite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AprobacionNumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarjetaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Servicio.Servicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pagado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaLimite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AprobacionNumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarjeta.TarjetaNumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario)
                </td>
                <td>
                    @if (item.Pagado == 0)
                    {
                        @*
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-xs btn-primary" });
            @:|<span class="glyphicon glyphicon-pencil"></span>
            @Html.ActionLink("Pay", "Pagado", new { id = item.ID }, new { @class = "btn btn-xs btn-warning" });
            @:|
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-xs btn-danger" })
            @:|<span class="glyphicon glyphicon-trash"></span>
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-xs btn-success" }) |
                        *@

                        <a href="@Url.Action("Edit", "Factura", new { id = item.ID })" class="btn btn-xs btn-primary">
                            <span class="glyphicon glyphicon-pencil"> Edita</span>
                        </a>
                        
                        <a href="@Url.Action("Pagado", "Factura", new { id = item.ID})" class="btn btn-xs btn-warning">
                            <span class="glyphicon glyphicon-thumbs-up"> Paga</span>
                        </a>

                        <a href="@Url.Action("Delete", "Factura", new { id = item.ID})" class="btn btn-xs btn-danger">
                            <span class="glyphicon glyphicon-trash"> Borra</span>
                        </a>
                    }


                    <a href="@Url.Action("Details", "Factura", new { id = item.ID})" class="btn btn-xs btn-success">
                        <span class="glyphicon glyphicon-eye-open">Ver</span>
                    </a>
                    
                    





                </td>
            </tr>
        }
    </tbody>
</table>
